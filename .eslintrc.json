{
  "parser": "@babel/eslint-parser",
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base",
    "plugin:prettier/recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "ignorePatterns": [
    "src/lib/**/*.js"
  ],
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": {
          "resolve": {
            "modules": [
              "src"
            ]
          }
        }
      }
    }
  },
  "rules": {
    "import/no-extraneous-dependencies": [
      2,
      {
        "devDependencies": true
      }
    ],
    "import/no-unresolved": [
      2,
      {
        "ignore": [
          "^https?://"
        ]
      }
    ],
    "no-restricted-syntax": 0,
    "no-bitwise": [
      1,
      {
        "allow": [
          "&"
        ],
        "int32Hint": true
      }
    ],
    "no-console": [
      1,
      {
        "allow": [
          "warn",
          "debug"
        ]
      }
    ],
    "func-names": [
      1,
      "as-needed",
      {
        "generators": "never"
      }
    ],
    "require-yield": 0
  }
}
