{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "ignorePatterns": ["src/lib/**/*.js"],
  "rules": {
    "import/no-extraneous-dependencies": [
      2, {
        "devDependencies": ["webpack/**/*.js"]
      }
    ],
    "import/no-unresolved": [
      2,
      {
        "ignore": [
          "^https?://"
        ]
      }
    ],
    "no-restricted-syntax": 0,
    "no-bitwise": [
      1,
      {
        "allow": [
          "&"
        ],
        "int32Hint": true
      }
    ],
    "no-console": [
      1,
      {
        "allow": [
          "warn",
          "debug"
        ]
      }
    ],
    "func-names": [
      1,
      "as-needed",
      {
        "generators": "never"
      }
    ],
    "require-yield": 0
  }
}
